{
    "name": "cli-typescript-node",
    "version": "1.0.0",
    "description": "Simple boilerplate application using Node.js/Typescript with proper ESLint/Prettier configuration",
    "main": "dist/index.js",
    "scripts": {
        "start": "node dist/index.js",
        "prestart": "npm run build",
        "build": "tsc",
        "build:watch": "tsc -w",
        "lint:report": "eslint -f stylish src/** --ext .ts || true",
        "lint": "eslint --fix src/** --ext .ts"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/ilkini/node-boilerplates"
    },
    "author": "Ilkin Isgandarov",
    "license": "ISC",
    "devDependencies": {
        "@types/node": "^13.7.0",
        "@typescript-eslint/eslint-plugin": "^2.19.0",
        "@typescript-eslint/parser": "^2.19.0",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.10.0",
        "eslint-config-standard": "^14.1.0",
        "eslint-plugin-import": "^2.20.1",
        "eslint-plugin-node": "^11.0.0",
        "eslint-plugin-prettier": "^3.1.2",
        "eslint-plugin-promise": "^4.2.1",
        "eslint-plugin-standard": "^4.0.1",
        "prettier": "1.19.1",
        "typescript": "^3.7.5"
    }
}
